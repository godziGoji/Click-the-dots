body {
  text-align: center;
  font-family: sans-serif;
  background-color: #f0f0f0;
}

#game-area {
  width: 80vw;
  height: 60vh;
  margin: 0 auto;
  border: 3px solid #333;
  position: relative;
  background-color: white;
}

#dot {
  width: 50px;
  height: 50px;
  background-color: red;
  border-radius: 50%;
  position: absolute;
  cursor: pointer;
}
